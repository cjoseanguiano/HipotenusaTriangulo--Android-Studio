<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hipotenusatriangulo.devix.hipotenusatriangulo.MainActivity">

    <ImageView
        android:id="@+id/imageA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#4578"
        android:src="@drawable/triangulo_rectangulo" />

    <EditText
        android:id="@+id/edt1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/imageA"
        android:layout_margin="10dp"
        android:background="#57EA"
        android:inputType="numberDecimal"
        android:hint="Ingresa cateto A" />

    <EditText
        android:id="@+id/edt2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/edt1"
        android:layout_margin="10dp"
        android:background="#57EA"
        android:inputType="numberDecimal"
        android:hint="Ingresa cateto B" />
    />

    <Button
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt2"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:text="Calcular" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/btn1"
        android:layout_margin="10dp"
        android:background="#57EA"
        android:padding="10dp"
        android:text="-"
        android:textAlignment="center"
        android:textSize="20sp" />

</RelativeLayout>
